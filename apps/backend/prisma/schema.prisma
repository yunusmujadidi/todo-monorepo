generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

// auth section
model User {
  id    String @id @default(uuid())
  name  String
  email String @unique

  // make username optional since we have email for login and register
  username String? @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation
  tasks Task[]

  @@map("users")
}

// task model

enum Status {
  TODO
  IN_PROGRESS
  DONE
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  status      Status   @default(TODO)
  deadline    DateTime
  // make optional
  createdBy   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
